<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorMainMonitor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subjectMonitorDist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDistMonitor"
            android:textColor="@color/colorMonitorText"
            android:text="@string/main_distmonitor"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/nowDistTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/subjectMonitorTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTimeMonitor"
            android:textColor="@color/colorMonitorText"
            android:text="@string/main_timemonitor"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/nowUseTimeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorMainStatus"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>

